<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      <form id="login-form" class="login-form shadow p-4 my-5 mx-auto bg-body rounded w-75 requires-validation"
        novalidate>
        <div id="login-alert"></div>
        <div class="d-flex justify-content-center">
          <img class="img-fluid" alt="Responsive image" src="images/challenge-fitness-logo.jpeg" />
        </div>
        <h2 class="text-center">Login</h2>
        <div>
          <label for="username" class="my-2 form-label">Username</label>
          <div class="input-group has-validation">
            <input type="text" class="form-control" id="username" required>
            <div class="invalid-feedback">Please enter a username</div>
          </div>
        </div>
        <div>
          <label for="password" class="my-2 form-label">Password</label>
          <div class="input-group has-validation">
            <input type="password" class="form-control" id="password" required>
            <div class="invalid-feedback">Please enter a password</div>
          </div>
        </div>
        <button type="submit" class="btn btn-primary btn-lg w-100 mt-4 p-3">Submit</button>
        <p class="text-center mt-3 mb-0">Don't have an account? <a href="/register">Register here</a></p>
        <p id="err-container"></p>
      </form>
    </div>
  </div>
</div>
<script src="/js/login.js"></script>